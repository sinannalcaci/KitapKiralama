@using KitapKiralama.Entity.Poco;
@model Kiralama

<form method="post" enctype="multipart/form-data">

    <div class="row">


        <div class="col-10">

            <div class="border p-3 mt-5">

                <div class="row pb-3">
                    <h2 class="text-primary"> @(Model == null ? "Yeni Kiralama İşlemi Başlat" : "Kiralama Güncelle") </h2>
                    <br />
                </div>

                <div class="mb-3">
                    <label asp-for="OgrenciId" class="p-0"></label>
                    <input asp-for="OgrenciId" class="form-control" />
                    <span asp-validation-for="OgrenciId" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="KitapId" class="p-0"></label>
                    <select asp-for="KitapId" asp-items="ViewBag.KitapList" class="form-select"></select>

                </div>

                @if (Model != null)
                {

                    <button type="submit" class="btn btn-lg btn-primary">Güncelle</button>
                }
                else
                {
                    <button type="submit" class="btn btn-lg btn-primary">Yeni Kiralama Ekle</button>
                }

                <a asp-controller="Kiralama" asp-action="Index" class="btn btn-lg btn-primary"> Kiralamalara Geri Dön</a>


            </div>

        </div>

        <div class="col-2">
            @if (Model != null)
            {
                <img src="@Model.Kitap.ResimUrl" width="100%" class="mt-5" style="border-radius:10px; border:4px solid #bbb9b9" />
            }
        </div>

    </div>


</form>

